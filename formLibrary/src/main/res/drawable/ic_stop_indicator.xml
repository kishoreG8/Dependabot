<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="25dp"
                android:height="25dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="25dp"
                android:height="25dp" />

            <gradient
                android:angle="270"
                android:endColor="#fa16151c"
                android:startColor="#545269" />
        </shape>
    </item>
</layer-list>